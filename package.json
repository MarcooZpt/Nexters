{
  "name": "nexter",
  "version": "1.0.0",
  "description": "Nexter webpage",
  "scripts": {
    "dev:sass": "sass sass/main.scss css/style.css --watch",
    "dev": "npm-run-all --parallel dev:sass devserver",
  

    "build:sass": "sass sass/main.scss css/style.comp.css",
    "build:prefix": "postcss css/style.comp.css --use autoprefixer -o css/style.prefix.css",
    "build:compress": "sass css/style.prefix.css css/style.css --style=compressed",
    "build": "npm-run-all build:sass build:prefix build:compress",
   "compile:sass": "sass sass/main.scss css/style.comp.css",
   "compress:css": "sass css/style.prefix.css css/style.css --style=compressed",

    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.comp.css -o css/style.prefix.css",
    "build:css": "npm-run-all compile:sass prefix:css compress:css",

    "devserver": "live-server" 
  },
  "author": "Marco",
  "license": "ISC",
  "devDependencies": {
    "sass": "^1.69.5",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.33",
    "postcss-cli": "^10.1.0",
    "npm-run-all": "^4.1.5",
    "live-server": "^1.2.2"
  }
}
